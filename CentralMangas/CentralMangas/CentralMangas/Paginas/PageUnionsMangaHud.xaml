<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:CentralMangas.Controls"
             x:Class="CentralMangas.Paginas.PageUnionsMangaHud">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <controls:FlexView 
                    Wrap="Wrap" 
                    x:Name="Flex"
                    BackgroundColor="Black">
                    <controls:FlexView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout 
                                FlexLayout.Basis="33%" 
                                Margin="2"
                                BackgroundColor="#1a1818" 
                                HeightRequest="230" 
                                BindingContext="{Binding EntidadeManga}">
                                <Frame HeightRequest="180" Padding="0">
                                    <AbsoluteLayout>
                                        <ActivityIndicator IsRunning="{Binding Source={x:Reference image1}, Path=IsLoading }"
                                       AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                                       AbsoluteLayout.LayoutFlags="PositionProportional"
                                       Color="Yellow" />
                                        <Image 
                                    x:Name="image1" 
                                    Source="{Binding Foto}" 
                                     AbsoluteLayout.LayoutFlags="All"
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    Aspect="Fill"
                                    VerticalOptions="Fill"
                                    HorizontalOptions="Fill">
                                            <Image.GestureRecognizers>
                                                <ClickGestureRecognizer Clicked="OnTapped"/>
                                                <TapGestureRecognizer Tapped="OnTapped"/>
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </AbsoluteLayout>
                                </Frame>
                                <Label 
                                    TextColor="White"
                                    Text="{Binding Nome}" 
                                    HorizontalTextAlignment="Center" 
                                    VerticalTextAlignment="Start">
                                    <Label.GestureRecognizers>
                                        <ClickGestureRecognizer Clicked="OnTapped"/>
                                        <TapGestureRecognizer Tapped="OnTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </DataTemplate>
                    </controls:FlexView.ItemTemplate>


                    <!--Testes-->
                    <StackLayout 
                                FlexLayout.Basis="33%" 
                                Margin="2"
                                BackgroundColor="#1a1818" 
                                HeightRequest="230">
                        <Frame HeightRequest="180" Padding="0" BackgroundColor="red">
                            <AbsoluteLayout BackgroundColor="green">
                                <ActivityIndicator IsRunning="{Binding Source={x:Reference image1}, Path=IsLoading }"
                                       AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                                       AbsoluteLayout.LayoutFlags="PositionProportional"
                                       Color="Yellow" />
                                <Image 
                                    x:Name="image1" 
                                    Source="foto1" 
                                    AbsoluteLayout.LayoutFlags="All"
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    Aspect="Fill"
                                    VerticalOptions="Fill"
                                    HorizontalOptions="Fill">
                                <Image.GestureRecognizers>
                                    <ClickGestureRecognizer Clicked="OnTapped"/>
                                    <TapGestureRecognizer Tapped="OnTapped"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </AbsoluteLayout>
                        </Frame>
                        <Label
                                    TextColor="White"
                                    Text="Loucura de manga esse em" 
                                    HorizontalTextAlignment="Center" 
                                    VerticalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <ClickGestureRecognizer Clicked="OnTapped"/>
                                <TapGestureRecognizer Tapped="OnTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                        <StackLayout FlexLayout.Basis="33%" Margin="2" BackgroundColor="#1a1818" HeightRequest="230" WidthRequest="120">
                        <Image Source="foto2.jpg" Aspect="Fill" HeightRequest="180"/>
                        <Label TextColor="White" Text="-Rain- (Oneshot)" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
                    </StackLayout>

                    <StackLayout FlexLayout.Basis="33%" Margin="2" BackgroundColor="#1a1818" HeightRequest="230" WidthRequest="120">
                        <Image Source="foto3.jpg" Aspect="Fill" HeightRequest="180"/>
                        <Label TextColor="White" Text="1-nen A-Gumi no Monster" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
                    </StackLayout>

                    <StackLayout FlexLayout.Basis="33%" Padding="2" BackgroundColor="#1a1818" HeightRequest="230" WidthRequest="120">
                        <AbsoluteLayout>
                            <ActivityIndicator IsRunning="true"
                         AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         Color="Yellow" />
                            <Image Aspect="Fill" HeightRequest="180"/>
                        </AbsoluteLayout>
                        <Label TextColor="White" Text="12 Nin no Yasashii Koroadsasdsh..." HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
                    </StackLayout>

                </controls:FlexView>
                <!--<ActivityIndicator
                         IsRunning="true"
                         x:Name="MangasCarregando"
                         AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" 
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         Color="Yellow" />-->
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>